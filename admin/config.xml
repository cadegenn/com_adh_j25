			description="COM_ADH_PAIEMENT_SETTINGS_GRATUIT_DESC"
			class="radiobox" default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<!-- mode_paiement = 1 -->
		<field
			name="espece" type="radio"
			label="COM_ADH_PAIEMENT_SETTINGS_ESPECE_LABEL"
			description="COM_ADH_PAIEMENT_SETTINGS_ESPECE_DESC"
			class="radiobox" default="0"
